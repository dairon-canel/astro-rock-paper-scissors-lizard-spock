---
import { colors } from '../constants/colors';

export interface Props {
  color: 'yellow' | 'blue' | 'red' | 'purple' | 'cyan';
  icon: 'scissors' | 'paper' | 'rock' | 'lizard' | 'spock';
  class?: string;
}

const { class: className, color, icon } = Astro.props;

const buttonId = `button-${icon}`;
const iconImage = `url(/images/icon-${icon}.svg)`;
const colorFrom = colors[`${color}-from`];
const colorTo = colors[`${color}-to`];
---

<button
  id={buttonId}
  class:list={[
    className,
    'button-choice h-[5.35rem] w-[5.35rem] rounded-full drop-shadow-xl shadow-xl',
  ]}
>
</button>

<style define:vars={{ colorFrom, colorTo, iconImage }}>
  .button-choice {
    position: relative;
    background: radial-gradient(
      circle at 50% 43%,
      var(--colorFrom) 70%,
      var(--colorTo) 25%
    );
  }

  .button-choice::before {
    content: '';
    position: absolute;
    left: 12%;
    top: 12%;
    width: 76%;
    height: 76%;
    border-radius: 100%;
    background: radial-gradient(
      circle at 50% 60%,
      white 70%,
      hsl(214, 13%, 89%) 25%
    );
  }

  .button-choice::after {
    position: absolute;
    content: '';
    background-image: var(--iconImage);
    background-repeat: no-repeat;
    background-size: 33px;
    background-position: 50% 50%;
    left: 0%;
    top: 0%;
    width: 100%;
    height: 100%;
  }
</style>
