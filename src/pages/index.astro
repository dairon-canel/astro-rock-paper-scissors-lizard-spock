---
import ChoiceButton from '../components/ChoiceButton.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Frontend Mentor | Rock paper scissors lizard spock">
  <div data-multi-step>
    <div data-step class="bg-image h-[27.5rem] w-full relative">
      <ChoiceButton
        color="yellow"
        icon="scissors"
        class="absolute top-[3.5rem] left-[7.8rem]"
        iconPosition="46% 50%"
      />
      <ChoiceButton
        color="blue"
        icon="paper"
        class="absolute top-[8.3rem] left-[13.75rem]"
        iconPosition="49% 50%"
        iconSize="32px"
      />
      <ChoiceButton
        color="red"
        icon="rock"
        class="absolute top-[15.2rem] left-[11.35rem]"
        iconPosition="50% 51%"
      />
      <ChoiceButton
        color="purple"
        icon="lizard"
        class="absolute top-[15.2rem] left-[4.15rem]"
        iconSize="41px"
      />
      <ChoiceButton
        color="cyan"
        icon="spock"
        class="absolute top-[8.3rem] left-[1.75rem]"
        iconSize="30px"
        iconPosition="52% 50%"
      />
    </div>
  </div>
</Layout>

<style>
  .bg-image {
    background-image: url(/images/bg-pentagon.svg);
    background-repeat: no-repeat;
    background-position: center bottom 9.7rem;
    background-size: 12rem 11.5rem;
  }
</style>
